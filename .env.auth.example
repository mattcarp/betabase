# Authentication Configuration
# Add these to your .env.local file

# Allowed email domains (comma-separated)
# Example: @sonymusic.com,@sony.com
NEXT_PUBLIC_ALLOWED_DOMAINS=@sonymusic.com

# Allowed specific emails (comma-separated)
# Example: admin@example.com,test@example.com
NEXT_PUBLIC_ALLOWED_EMAILS=matt@mattcarpenter.com

# AWS Cognito Configuration
NEXT_PUBLIC_AWS_REGION=your-region
NEXT_PUBLIC_AWS_USER_POOL_ID=your-user-pool-id
NEXT_PUBLIC_AWS_USER_POOL_CLIENT_ID=your-client-id

# Security Configuration
# These should only be used server-side
AWS_COGNITO_IDENTITY_POOL_ID=your-identity-pool-id
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_ACCESS_KEY_ID=your-access-key

# Feature Flags
NEXT_PUBLIC_ENABLE_MAGIC_LINK=true
NEXT_PUBLIC_ENABLE_SIGNUP=true
NEXT_PUBLIC_ENABLE_PASSWORD_AUTH=false