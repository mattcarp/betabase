{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "node_modules 2",
    ".next",
    "out",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "playwright.config.ts",
    "tests/**/*",
    "scripts/**/*",
    "src/app-backup/**/*",
    "**/*-backup*",
    "**/*.backup.*",
    "**/*.disabled",
    "**/* *.ts",
    "**/* *.tsx",
    "inngest/**/*",
    "src/services/**/*",
    "src/TestApp.tsx",
    "vitest.config.ts"
  ]
}
