{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    // PERFORMANCE OPTIMIZATION: Enable strict type checking
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
    // PERFORMANCE OPTIMIZATION: Additional strict checks
    // Removed noUnusedLocals and noUnusedParameters - too strict for development
    // ESLint handles these as warnings instead of build blockers
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules 2",
    "scripts/**/*",
    "src/app-backup/**/*",
    "**/*[0-9]*.ts",
    "**/*[0-9]*.tsx",
    "**/test-*.ts",
    "tests/**/*",
    "vitest.config.ts",
    "**/*-backup*",
    "**/*.backup.*",
    "**/*.disabled",
    "**/* *.ts",
    "**/* *.tsx",
    "inngest/**/*"
  ]
}
