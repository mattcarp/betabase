{
  "mcpServers": {
    "playwright-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@executeautomation/playwright-mcp-server"],
      "env": {
        "NODE_ENV": "development",
        "PLAYWRIGHT_OUTPUT_DIR": "./screenshots"
      }
    },
    "aoma-mesh": {
      "type": "stdio",
      "command": "node",
      "args": ["/Users/matt/Documents/projects/aoma-mesh-mcp/dist/aoma-mesh-server.js"],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "ref-tools": {
      "type": "http",
      "url": "https://api.ref.tools/mcp?apiKey=ref-851444f482b0cdffec41"
    },
    "semgrep": {
      "type": "stdio",
      "command": "semgrep-mcp",
      "args": ["-t", "stdio"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "supabase": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "supabase-mcp"],
      "env": {
        "SUPABASE_URL": "https://kfxetwuuzljhybfgmpuc.supabase.co",
        "SUPABASE_SERVICE_ROLE_KEY": "${SUPABASE_SERVICE_ROLE_KEY}"
      }
    },
    "render": {
      "type": "http",
      "url": "https://mcp.render.com/mcp",
      "headers": {
        "Authorization": "Bearer ${RENDER_API_KEY}"
      }
    },
    "chrome-devtools": {
      "type": "stdio",
      "command": "node",
      "args": ["./node_modules/chrome-devtools-mcp/build/src/index.js"]
    },
    "shadcn": {
      "type": "stdio",
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    }
  }
}
